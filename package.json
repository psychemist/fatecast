{
  "name": "fatecast",
  "version": "1.0.0",
  "description": "A social prediction market dApp using PYUSD, Pyth Oracle, and ASI agents",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy/deployPredictionMarket.js --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy/deployPredictionMarket.js --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify/verifyContract.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "agent:start": "node scripts/asi-agent/agent.js"
  },
  "keywords": [
    "prediction-market",
    "ethereum",
    "defi",
    "pyusd",
    "pyth-oracle",
    "asi-agent",
    "farcaster"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "hardhat": "^3.0.9"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@pythnetwork/pyth-sdk-solidity": "^4.2.0",
    "dotenv": "^17.2.3"
  }
}
